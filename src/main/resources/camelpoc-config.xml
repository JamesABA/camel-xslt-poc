<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Main spring config -->
    <bean id="logger" class="org.slf4j.LoggerFactory" factory-method="getLogger" xmlns="http://www.springframework.org/schema/beans">
        <constructor-arg value="com.businessagility.poc.camelpoc" />
    </bean>

    <import resource="classpath:camelpoc-cxf.xml"/>
    <import resource="classpath:camelpoc-activemq.xml"/>
    <import resource="classpath:camelpoc-routes.xml"/>

</beans>






