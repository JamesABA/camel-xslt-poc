<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <!-- Main spring config -->
    <bean id="configprops" class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:configuration/default.properties</value>
                <value>file:/AB2/configuration/override.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound">
            <value>true</value>
        </property>
    </bean>

    <bean id="logger" class="org.slf4j.LoggerFactory" factory-method="getLogger"
          xmlns="http://www.springframework.org/schema/beans">
        <constructor-arg value="com.businessagility.poc.camelpoc"/>
    </bean>

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <!-- AMQ broker if required, currently only used in test -->
    <!--<import resource="classpath:spring/camelpoc-activemq.xml"/>-->

    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <streamCaching id="myCacheConfig" bufferSize="16384" spoolDirectory="/tmp/cachedir" spoolThreshold="65536"/>
        <dataFormats>
            <json id="abrequestjson" library="Gson" unmarshalTypeName="com.businessagility.poc.types.ABRequest"/>
            <json id="abresponsejson" library="Gson" unmarshalTypeName="com.businessagility.poc.types.ABResponse"/>
        </dataFormats>
    </camelContext>

    <!-- bean to dynamically load routes -->
    <bean id="extRouteLoader" class="com.businessagility.poc.loader.RouteLoader">
        <constructor-arg value ="${route.configuration.folder}"/>
        <constructor-arg ref="camel" />
        <constructor-arg ref="logger"/>
    </bean>

    <bean id="messageBuilder" class="com.businessagility.poc.component.ABMessageBuilder">
        <property name="configFolder" value="${service.configuration.folder}"/>
    </bean>
    <bean id="messageUnpacker" class="com.businessagility.poc.component.ABMessageUnpack"/>

</beans>






